<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#FFFD3A16" android:startColor="#FFFD3A16" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="#FFFD3A16" android:startColor="#fd3a16" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="#ff6b6b" android:startColor="#ff6b6b" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>